@using Data.Models
@model IEnumerable<Order>

@{
    ViewData["Title"] = "指図";
}

<h1>指図</h1>

<p>@(ViewBag.Count.ToString("#,#")) 件</p>

<a asp-area="" asp-controller="Orders" asp-action="Index" asp-route-page=@(ViewBag.Page - 1)>前ページ</a>
<a asp-area="" asp-controller="Orders" asp-action="Index" asp-route-page=@(ViewBag.Page + 1)>次ページ</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsClosed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UpdatedDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.IsClosed)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(model => item.Number)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(model => item.Person.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status.Text)
                </td>
            </tr>
        }
    </tbody>
</table>
