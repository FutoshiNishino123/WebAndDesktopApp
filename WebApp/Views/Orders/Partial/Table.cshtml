@model IEnumerable<Data.Models.Order>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tfoot></tfoot>
    <tbody>
        @if (Model != null)
        {
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => order.Updated)
                    </td>
                    <td>
                        @Html.ActionLink(order.Number, "Details", new { id = order.Id })
                    </td>
                    <td>
                        @if (order.User != null)
                        {
                            @Html.DisplayFor(model => order.User.Name)
                        }
                    </td>
                    <td>
                        @if (order.Status != null)
                        {
                            @Html.DisplayFor(model => order.Status.Text)
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>